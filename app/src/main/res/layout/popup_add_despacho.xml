<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PopUp"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/btnBasic"
    android:padding="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NUEVO DESPACHO"
            android:textSize="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="6dp"
            />

        <Button
            android:id="@+id/btnMapaOrigen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/btnBasic"
            android:textColor="@color/colorWhite"
            android:text="Ubicación de origen" />

        <Button
            android:id="@+id/btnMapaDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/btnBasic"
            android:textColor="@color/colorWhite"
            android:text="Ubicación de destino" />

    </LinearLayout>

</FrameLayout>